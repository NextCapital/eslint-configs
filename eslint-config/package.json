    "globals": "^15.14.0",
    "eslint-plugin-n": "^17.15.1"
  },
  "devDependencies": {
    "auto-publish-package": "^2.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.30.0"
